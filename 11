#include<stdio.h>

int main() {
    int i, j, num = 1;

    for(i = 1; i <= 5; i++) {
        for(j = 1; j <= 5 - i; j++) {
            printf(" ");
        }
        for(j = 1; j <= i; j++) {
            printf("%d ", num);
            num++;
        }
        for(j = 1; j < i; j++) {
            num--;
            printf("%d ", num);
        }
        printf("\n");
    }

    for(i = 4; i >= 1; i--) {
        for(j = 1; j <= 5 - i; j++) {
            printf(" ");
        }
        num = i;
        for(j = 1; j <= i; j++) {
            printf("%d ", num);
            num++;
        }
        for(j = 1; j < i; j++) {
            num--;
            printf("%d ", num);
        }
        printf("\n");
    }

    return 0;
}


