#include<stdio.h>

int main() {
    int i, j, n;
    int a[10][10];

    printf("Enter the number of rows: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        for(j = 0; j <= i; j++) {
            if(j == 0 || j == i) {
                a[i][j] = 1;
            } else {
                a[i][j] = a[i-1][j-1] + a[i-1][j];
            }
        }
    }

    for(i = 0; i < n; i++) {
        for(j = 0; j <= i; j++) {
            printf("%d ", a[i][j]);
        }
        printf("\n");
    }

    return 0;
}
