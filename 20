
#include<stdio.h>

int main() {
	int i, j, n;

	// Print the top half of the pattern
	for(i = 1; i <= 5; i++) {
		for(j = 1; j <= 5-i; j++) {
			printf(" ");
		}
		for(j = 1; j <= 2*i-1; j++) {
			if(j == 1 || j == (2*i-1))
				printf("*");
			else
				printf(" ");
		}
		printf("\n");
	}

	// Print the bottom half of the pattern
	for(i = 4; i >= 1; i--) {
		for(j = 1; j <= 5-i; j++) {
			printf(" ");
		}
		for(j = 1; j <= 2*i-1; j++) {
			if(j == 1 || j == (2*i-1))
				printf("*");
			else
				printf(" ");
		}
		printf("\n");
	}

	return 0;
}



