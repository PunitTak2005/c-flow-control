// This program checks if you are 18 or not using goto statement.
#include <stdio.h>

int main(){
    int age;
    noteligible:
    printf("Enter Your age: ");
    scanf("%d", &age);  // use %d for integers, and add & to get the address of age
    if(age < 18){
        printf("You are not eligible for voting!\n");
        goto noteligible;
    } else{
        printf("You are eligible for voting!");
    }
    return 0;
}

 
